<Window x:Class="CloudTrade.Host.Views.Mains.LoadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudTrade.Host.Views.Mains"
        mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol"
       
        AllowsTransparency="True"
        Foreground="{x:Null}"
        Background="{x:Null}"
        FocusVisualStyle="{x:Null}"
        Title="LoadView" Height="200" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"  WindowStyle="None">
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Border Background="Transparent">
                <AdornerDecorator>
                    <ContentPresenter />
                </AdornerDecorator>
            </Border>
        </ControlTemplate>
    </Window.Template>

    <Border CornerRadius="10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
        <Grid>
            <hc:LoadingCircle Width="200" Height="200" DotDiameter="30"/>
        </Grid>
    </Border>
</Window>